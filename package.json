  "devDependencies": {
    "@babel/preset-typescript": "^7.15.0",
    "@codecov/nextjs-webpack-plugin": "^1.0.0",
    "@spotlightjs/spotlight": "^2.0.0-alpha.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/ws": "^8.5.10",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "dotenv-cli": "^7.4.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.1",
    "eslint-config-sentry-docs": "^1.118.0",
    "jest": "^29.5.0",
    "jest-dom": "^4.0.0",
    "jest-environment-jsdom": "^29.5.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.4",
    "prisma": "^5.8.1",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5",
    "ws": "^8.17.1"
  },
  "volta": {
    "node": "20.11.0",
    "yarn": "1.22.21"
  }
}
